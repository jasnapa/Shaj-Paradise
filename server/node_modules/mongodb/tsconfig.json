{
  "compilerOptions": {
    "allowJs": false,
    "checkJs": false,
    "strict": true,
    "alwaysStrict": true,
    "target": "ES2020",
    "module": "commonJS",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2020"
    ],
    "importHelpers": false,
    "noEmitHelpers": true,
    "noEmitOnError": true,
    "outDir": "lib",
    "verbatimModuleSyntax": true,
    "inlineSourceMap": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "inlineSources": false,
    "types": [
      "node"
    ],
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false
  },
  "ts-node": {
    "transpileOnly": true,
    "compiler": "typescript-cached-transpile"
  },
  "include": [
    "src/**/*"
  ]
}
